{
  "manifest_version": 2,
  "name": "PQSpy",
  "description": "Shows whether the connection was protected with post-quantum encryption",
  "version": "0.1.2",
  "browser_action": {
    "default_icon": {
      "32": "icons/unk.png"
    },
    "default_title": "PQSpy",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "webRequest", "webRequestBlocking", "<all_urls>"],
  "background": {
    "scripts": [ "background.js" ]
  },
  "icons": {
    "32": "icons/yes.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "62.0"
    }
  }
}
